<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MAPStatuon" >

<ImageView
    android:id="@+id/ihuio"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/Pre"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
     android:background="#55AA00"
    />

<ImageButton
    android:id="@+id/Pre"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:src="@drawable/page" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/ihuio"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:textStyle="bold"
    android:gravity="center"
    android:text=" 站點區域查詢 "
    android:textColor="#ffffff"
    android:textAppearance="?android:attr/textAppearanceLarge" />

<ListView
    android1:id="@+id/listu"
    android1:layout_width="match_parent"
    android1:layout_height="wrap_content"
    android1:layout_alignParentLeft="true"
    android1:layout_below="@+id/ihuio" >
</ListView>

<ImageButton
    android1:id="@+id/imageButton1"
    android1:layout_width="wrap_content"
    android:background="@android:color/transparent"
    android1:layout_height="wrap_content"
    android:onClick="updata"
    android1:layout_alignParentRight="true"
    android1:layout_alignParentTop="true"
    android1:src="@drawable/na" />

</RelativeLayout>